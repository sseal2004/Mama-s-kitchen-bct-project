<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/splash">

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Welcome Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <!-- Ad Banner Carousel -->
                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/adContainer"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="370dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/rounded_banner"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ad" />

                            <ImageView
                                android:layout_width="370dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/rounded_banner"
                                android:scaleType="centerCrop"
                                android:src="@drawable/add2" />

                            <ImageView
                                android:layout_width="370dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/rounded_banner"
                                android:scaleType="centerCrop"
                                android:src="@drawable/add3" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Welcome Text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.03"
                        android:paddingTop="16dp"
                        android:paddingBottom="8dp"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="Welcome to Mama's kitchen"
                        android:textColor="#E14A0E"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="8dp"
                        android:text="Delicious food. Cozy vibes. Great memories."
                        android:textColor="#4B3D66"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Search -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/rounded_search_bg"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="8dp"
                        android:src="@drawable/baseline_add_shopping_cart_24"
                        android:tint="#8B8A8A" />

                    <EditText
                        android:id="@+id/editTextSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search food, restaurants..."
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:textColorHint="#888888"
                        android:textColor="#000000"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Specials Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="ðŸ½ï¸ Today's Specials"
                    android:textColor="#0F2D0C"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- CardView 1: Book -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/rounded_image"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/restaurant7" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Book a Restaurant"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reserve your table now!"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/btnBookRestaurant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Book Now"
                                android:backgroundTint="#4CAF50"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CardView 2: Order -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/rounded_image"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/imageview2" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order Food"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get delicious food at home"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/btnOrderFood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Order Now"
                                android:backgroundTint="#4CAF50"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2B324"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:fontFamily="sans-serif-black"
            android:text="Menu"
            android:textColor="@android:color/white"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btnRestaurant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:fontFamily="sans-serif-black"
            android:text="Restaurant"
            android:textColor="@android:color/white"
            android:textSize="7sp" />

        <Button
            android:id="@+id/btnPayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:fontFamily="sans-serif-black"
            android:text="Payment"
            android:textColor="@android:color/white"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btnReview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:fontFamily="sans-serif-black"
            android:text="Review"
            android:textColor="@android:color/white"
            android:textSize="8sp" />
    </LinearLayout>
</LinearLayout>
