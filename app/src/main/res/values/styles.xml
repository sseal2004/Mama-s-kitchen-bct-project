<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#5CE214</item>
        <item name="colorPrimaryDark">@color/primaryVariant</item>
        <item name="colorAccent">#F44336</item>
        <item name="buttonStyle">@style/SexyButton</item>
    </style>

    <style name="SexyButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#41E214</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CardTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1030D4</item>
    </style>

    <style name="CardSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#E91E63</item>
    </style>

</resources>
